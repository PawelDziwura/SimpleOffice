<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pawel.simpleoffice.SimpleOffice">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="376dp"
        android:layout_height="166dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@color/colorAccent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:text="Welcome to Simple Office!"
            android:textColor="#fff"
            android:textSize="29sp" />

        <Button
            android:id="@+id/lets_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-condensed"
            android:onClick="click"
            android:text="@string/lets_go"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="101dp"
            android:text="Powered by" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="casual"
            android:text="ANDROID"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/googleg_standard_color_18"
            android:layout_above="@+id/textView7"
            android:layout_alignRight="@+id/lets_go"
            android:layout_alignEnd="@+id/lets_go"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignTop="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_toRightOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignLeft="@+id/lets_go"
            android:layout_alignStart="@+id/lets_go"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <Button
            android:id="@+id/Continue_without_registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="casual"
            android:text="Continue without registration"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_below="@+id/lets_go"
            android:layout_centerHorizontal="true"
            android:onClick="click"/>

</RelativeLayout>
