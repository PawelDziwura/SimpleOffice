<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pawel.simpleoffice.Spirit_level"
    tools:showIn="@layout/activity_spirit_level">

        <TextView
            android:id="@+id/Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollIndicators="top"
            android:text="@string/lets_go"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="237dp"
            android:layout_above="@+id/Level1"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:id="@+id/Level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_go"
            android:textSize="40sp"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical:  "
            android:textSize="40sp"
            android:layout_alignBaseline="@+id/Level"
            android:layout_alignBottom="@+id/Level"
            android:layout_toLeftOf="@+id/Level"
            android:layout_toStartOf="@+id/Level" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal:  "
            android:textSize="40sp"
            android:layout_marginBottom="97dp"
            android:layout_marginLeft="142dp"
            android:layout_marginStart="142dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

</RelativeLayout>
